<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.creditkeyboard.ui.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.example.user.creditkeyboard.customview.ClearEditText
        android:id="@+id/et_test"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorAccent"
        android:inputType="number"
        android:maxLines="1" />


    <com.example.user.creditkeyboard.customview.ClearEditText
        android:id="@+id/et_system_num"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/et_test"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@android:color/white"
        android:inputType="number" />

    <com.example.user.creditkeyboard.customview.ClearEditText
        android:id="@+id/et_third"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/et_system_num"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimary"
        android:inputType="number" />


    <EditText
        android:id="@+id/et_forth"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/et_third"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@android:color/holo_green_light"
        android:maxLength="18" />

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="哈哈哈哈哈哈\n我曹我曹我曹\n什么鬼什么鬼什么鬼" />


</RelativeLayout>
